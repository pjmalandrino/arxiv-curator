version: '3.8'

services:
  postgres:
    image: postgres:15-alpine
    environment:
      POSTGRES_DB: arxiv_curator
      POSTGRES_USER: curator
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-password}
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./db/migrations:/docker-entrypoint-initdb.d
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U curator"]
      interval: 5s
      retries: 5

  pipeline:
    build:
      context: .
      dockerfile: docker/Dockerfile.pipeline
    depends_on:
      postgres:
        condition: service_healthy
    environment:
      DATABASE_URL: postgresql://curator:${POSTGRES_PASSWORD:-password}@postgres:5432/arxiv_curator
      OLLAMA_HOST: ${OLLAMA_HOST:-http://host.docker.internal:11434}
    volumes:
      - ./src:/app/src
    extra_hosts:
      - "host.docker.internal:host-gateway"

volumes:
  postgres_data:
